[Unit]
Description=LinuxOps Control Center Monitoring Agent
After=network.target

[Service]
Type=oneshot
ExecStart=/usr/local/bin/locc-agent.sh
User=root
Group=root
Nice=10
IOSchedulingClass=best-effort
IOSchedulingPriority=7

# Safety
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/log/locc

[Install]
WantedBy=multi-user.target
