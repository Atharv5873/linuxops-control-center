[Unit]
Description=LinuxOps Control Center Self-Healing Engine
After=network.target

[Service]
Type=oneshot
ExecStart=/usr/local/bin/locc-heal.sh
User=root
Group=root

# Safety hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/log/locc

[Install]
WantedBy=multi-user.target
